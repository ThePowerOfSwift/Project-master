# platform :ios, '9.0'

target 'Project' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Project
  
  pod 'Alamofire', '~> 4.7' # 网络层 Alamofire https://github.com/Alamofire/Alamofire
